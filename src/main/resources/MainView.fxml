<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marcinseweryn.visualizer.Controller"
            stylesheets="Style.css" styleClass="main">
    <padding>
        <Insets top="10" right="25" bottom="25" left="25"/>
    </padding>
    <left>
        <TabPane fx:id="algorithmTab" tabClosingPolicy="UNAVAILABLE" styleClass="tabPane" VBox.vgrow="ALWAYS">
            <Tab text="Path Finding" styleClass="tab">
                <TabPane fx:id="graphTab" tabClosingPolicy="UNAVAILABLE" styleClass="tabPane">
                    <Tab text="Algorithm" styleClass="tab">
                        <VBox>
                            <padding>
                                <Insets topRightBottomLeft="5"/>
                            </padding>
                            <spacing>10</spacing>
                            <VBox>
                                <Label text="Candidate Nodes" contentDisplay="RIGHT" styleClass="tabLabel">
                                </Label>
                                <ListView minHeight="105" maxHeight="145" styleClass="listView"/>
                            </VBox>
                            <VBox>
                                <Label text="Visited" contentDisplay="RIGHT" styleClass="tabLabel">
                                </Label>
                                <ListView minHeight="105" maxHeight="145" styleClass="listView"></ListView>
                            </VBox>
                            <VBox>
                                <Label text="Code" contentDisplay="RIGHT" styleClass="tabLabel">
                                </Label>
                                <ListView minHeight="360" maxHeight="420" styleClass="listView"></ListView>
                            </VBox>
                        </VBox>
                    </Tab>
                    <Tab text="Edges" styleClass="tab">
                    </Tab>
                    <Tab text="Help" styleClass="tab">
                    </Tab>
                </TabPane>
            </Tab>
            <Tab text="Sorting">
            </Tab>
        </TabPane>
    </left>
    <center>
            <VBox fx:id="centerVBox" spacing="20">
                <padding><Insets right="40" left="20"/></padding>

                <HBox alignment="BOTTOM_LEFT" spacing="10">
                    <ChoiceBox fx:id="algorithmList"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- Path Finding Pane initially added -->
                <AnchorPane fx:id="graphPane"
                            onMousePressed="#onGraphPaneMousePressed"
                            onDragDetected="#onGraphPaneDragDetected"
                            onMouseDragged="#onGraphPaneMouseDragged"
                            onMouseReleased="#onGraphPaneMouseReleased"
                            onDragOver="#onGraphPaneDragOver"
                            onDragDropped="#onGraphPaneDragDropped"
                            prefHeight="720"
                            styleClass="algorithmPane"
                            VBox.vgrow="ALWAYS"
                            HBox.hgrow="ALWAYS"
                            minWidth="700"
                            maxWidth="Infinity"
                            visible="false"/>

                <!-- Sorting Pane is hidden initially -->
                <AnchorPane fx:id="arrayPane"
                            prefHeight="720"
                            styleClass="algorithmPane"
                            VBox.vgrow="ALWAYS"
                            HBox.hgrow="ALWAYS"
                            minWidth="700"
                            maxWidth="Infinity"
                            visible="false"/>
            </VBox>
        </center>
</BorderPane>

