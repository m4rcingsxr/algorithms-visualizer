<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marcinseweryn.visualizer.Controller"
            stylesheets="Style.css" styleClass="main">
    <padding>
        <Insets top="10" right="25" bottom="25" left="25"/>
    </padding>
    <left>
        <TabPane fx:id="algorithmTab" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
            <Tab text="Path Finding">
                <TabPane fx:id="graphTab" tabClosingPolicy="UNAVAILABLE">
                    <Tab text="Algorithm">
                        <VBox>
                            <padding>
                                <Insets topRightBottomLeft="10"/>
                            </padding>
                            <spacing>10</spacing>
                            <VBox>
                                <Label text="Candidate Nodes" contentDisplay="RIGHT" styleClass="list-view-label">
                                </Label>
                                <ListView minHeight="105" maxHeight="145"/>
                            </VBox>
                            <VBox>
                                <Label text="Visited" contentDisplay="RIGHT" styleClass="list-view-label">
                                </Label>
                                <ListView minHeight="105" maxHeight="145"></ListView>
                            </VBox>
                            <VBox>
                                <Label text="Code" contentDisplay="RIGHT" styleClass="list-view-label">
                                </Label>
                                <ListView minHeight="360" maxHeight="420"></ListView>
                            </VBox>
                        </VBox>
                    </Tab>
                    <Tab text="Vertex">
                        <VBox>
                            <ScrollPane>
                                <Accordion fx:id="vertexList"/>
                            </ScrollPane>
                        </VBox>
                    </Tab>
                    <Tab text="Help">
                    </Tab>
                </TabPane>
            </Tab>
            <Tab text="Sorting">
            </Tab>
        </TabPane>
    </left>
    <center>
            <VBox fx:id="centerVBox" spacing="20">
                <padding><Insets right="40" left="40"/></padding>

                <HBox alignment="BOTTOM_LEFT" spacing="10">
                    <ChoiceBox fx:id="algorithmList"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- Path Finding Pane initially added -->
                <AnchorPane fx:id="graphPane"
                            onMousePressed="#onGraphPaneMousePressed"
                            onDragDetected="#onGraphPaneDragDetected"
                            onMouseDragged="#onGraphPaneMouseDragged"
                            onMouseReleased="#onGraphPaneMouseReleased"
                            onDragOver="#onGraphPaneDragOver"
                            onDragDropped="#onGraphPaneDragDropped"
                            prefHeight="720"
                            styleClass="algorithmPane"
                            VBox.vgrow="ALWAYS"
                            HBox.hgrow="ALWAYS"
                            minWidth="700"
                            maxWidth="Infinity"
                            visible="false"/>

                <!-- Sorting Pane is hidden initially -->
                <AnchorPane fx:id="arrayPane"
                            prefHeight="720"
                            styleClass="algorithmPane"
                            VBox.vgrow="ALWAYS"
                            HBox.hgrow="ALWAYS"
                            minWidth="700"
                            maxWidth="Infinity"
                            visible="false"/>
            </VBox>
        </center>
</BorderPane>

